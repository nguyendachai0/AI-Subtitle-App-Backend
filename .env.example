# Required: Groq API Key for Whisper transcription
GROQ_API_KEY=groq_api_key_here

# Optional: Gemini API Key for AI-powered subtitle styling
GEMINI_API_KEY=gemini_api_key_here

# Optional: Enable AI styling (true/false)
USE_AI_STYLING=false

# Server port
PORT=3001

# Upload limits
MAX_FILE_SIZE_MB=100

# Processing options
ENABLE_VIDEO_SCALING=true
DEFAULT_FONT_SIZE=22